<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../../../../../../lib/internal/Magento/Framework/View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="product.tile.container.addon.addtocompare.list" display="false" />
        <referenceBlock name="product.tile.container.addon.addtocompare.grid" display="false" />

        <referenceBlock name="product.tile.container.badges.grid">
            <!-- Sale badge for configurable products -->
            <referenceBlock name="product.tile.badge.discount.grid">
                <arguments>
                    <argument xsi:type="string" name="badge_type">discount</argument>
                    <argument xsi:type="boolean" name="enable_updating_badge_configurables">true</argument>
                    <argument xsi:type="string" translate="true" name="configurables_default_badge_text">Up to</argument>
                </arguments>
            </referenceBlock>
        </referenceBlock>

        <referenceBlock name="product.tile">
            <arguments>
                <argument xsi:type="boolean" name="entire_tile_clickable">true</argument>
            </arguments>
        </referenceBlock>
    </body>
</page>
