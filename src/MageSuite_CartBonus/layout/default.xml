<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="1column" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="bonus.gift.status">
            <arguments>
                <argument name="additional_css_classes" xsi:type="string"></argument>
                <argument name="headline" xsi:type="string" translate="true">Acquire your gift now!</argument>
            </arguments>
            <block class="MageSuite\ThemeHelpers\Block\Icon" name="bonus.gift.icon.headline">
                <arguments>
                    <argument name="icon_url" xsi:type="string">images/icons/cart-bonus/icon-headline.svg</argument>
                    <argument name="css_class" xsi:type="string">cs-cart-bonus__icon cs-cart-bonus__icon--headline</argument>
                    <argument name="inlined" xsi:type="boolean">true</argument>
                    <argument name="lazy_loaded" xsi:type="boolean">true</argument>
                </arguments>
            </block>
            <block class="MageSuite\ThemeHelpers\Block\Icon" name="bonus.gift.icon.gift">
                <arguments>
                    <argument name="icon_url" xsi:type="string">images/icons/cart-bonus/icon-gift.svg</argument>
                    <argument name="css_class" xsi:type="string">cs-cart-bonus__icon cs-cart-bonus__icon--gift</argument>
                    <argument name="inlined" xsi:type="boolean">true</argument>
                    <argument name="lazy_loaded" xsi:type="boolean">true</argument>
                </arguments>
            </block>
            <block class="MageSuite\ThemeHelpers\Block\Icon" name="bonus.gift.icon.status">
                <arguments>
                    <argument name="icon_url" xsi:type="string">images/icons/cart-bonus/icon-status.svg</argument>
                    <argument name="css_class" xsi:type="string">cs-cart-bonus__icon cs-cart-bonus__icon--status</argument>
                    <argument name="inlined" xsi:type="boolean">true</argument>
                    <argument name="lazy_loaded" xsi:type="boolean">true</argument>
                </arguments>
            </block>
        </referenceBlock>
    </body>
</page>
