<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="checkout.cart.item.renderers.downloadable.actions.edit">
            <block class="MageSuite\ThemeHelpers\Block\Icon" name="checkout.cart.item.renderers.downloadable.actions.edit.icon">
                <arguments>
                    <argument name="icon_url" xsi:type="string">images/icons/cart-item/icon-edit.svg</argument>
                    <argument name="css_class" xsi:type="string">cs-cart-item__link-icon cs-cart-item__link-icon--edit</argument>
                    <argument name="inlined" xsi:type="boolean">true</argument>
                    <argument name="lazy_loaded" xsi:type="boolean">true</argument>
                </arguments>
            </block>
        </referenceBlock>
        <referenceBlock name="checkout.cart.item.renderers.downloadable.actions.remove">
            <block class="MageSuite\ThemeHelpers\Block\Icon" name="checkout.cart.item.renderers.downloadable.actions.remove.icon">
                <arguments>
                    <argument name="icon_url" xsi:type="string">images/icons/cart-item/icon-remove.svg</argument>
                    <argument name="css_class" xsi:type="string">cs-cart-item__link-icon cs-cart-item__link-icon--remove</argument>
                    <argument name="inlined" xsi:type="boolean">true</argument>
                    <argument name="lazy_loaded" xsi:type="boolean">true</argument>
                </arguments>
            </block>
        </referenceBlock>
    </body>
</page>
