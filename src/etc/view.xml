                <var name="prefix_label">Page:</var>
                <var name="display_prev_next_buttons_if_disabled">true</var>
                <var name="display_prev_next_labels">false</var>
                <!-- if last_page_separator will be left empty, it will display as '/'. The reason is that we don't want to put it as translateable string -->
                <var name="last_page_separator"></var>
                <var name="icons">
                    <var name="previous_page">images/icons/toolbar/pagination-previous-page.svg</var>
                    <var name="next_page">images/icons/toolbar/pagination-next-page.svg</var>
                </var>
            </var>
        </var>
        <var name="header">
            <var name="mobile-is-bottom">true</var> <!-- The default position of the header is on the bottom for mobile, but top position (false value) is also supported. -->
            <var name="mobile-is-sticky">true</var> <!-- The default behavior on mobile is to keep header sticky, but false value is also supported. If header is on the bottom on mobile please always set the variable as true. -->
            <var name="mobile-menu-is-right">true</var> <!-- For better UX the default position of the burger (offcanvas toggle) and offcanvas menu on mobile is on the right, but left position (set the variable below to false) is also supported. -->
            <var name="mobile_logo_path"></var> <!-- Logo path displays separate logo on mobile resolutions (below tablet). In the checkout there is always standard logo. -->
            <var name="mobile_logo_width"></var>
            <var name="mobile_logo_height"></var>
            <var name="mobile_back_button">true</var> <!-- Browsing history back button for mobile devices -->
