<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="top.links">
            <block class="Magento\Framework\View\Element\Template" name="search-link" template="Magento_CatalogSearch::link.phtml" before="-">
                <arguments>
                    <argument name="xml_label" xsi:type="string" translate="true">Search</argument>
                    <argument name="additional_css_classes" xsi:type="string">cs-header-user-nav__item--search</argument>
                </arguments>
                <block class="MageSuite\ThemeHelpers\Block\Icon" name="search-link.icon">
                    <arguments>
                        <argument name="icon_url" xsi:type="string">images/icons/header-user-nav/icon-search.svg</argument>
                        <argument name="css_class" xsi:type="string">cs-header-user-nav__icon cs-header-user-nav__icon--search</argument>
                        <argument name="inlined" xsi:type="boolean">true</argument>
                        <argument name="lazy_loaded" xsi:type="boolean">false</argument>
                        <argument name="alt_text" xsi:type="string" translate="true">search</argument>
                    </arguments>
                </block>
            </block>
        </referenceBlock>
    </body>
</page>
