<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="view.addto.wishlist">
            <arguments>
                <argument name="additional_css_classes" xsi:type="string">cs-buybox__addto-item--wishlist</argument>
                <argument name="link_label" xsi:type="string" translate="true">Add to Wish List</argument>
            </arguments>

            <block class="MageSuite\ThemeHelpers\Block\Icon" name="view.addto.wishlist.icon">
                <arguments>
                    <argument name="icon_url" xsi:type="string">images/icons/wishlist.svg</argument>
                    <argument name="css_class" xsi:type="string">cs-buybox__addto-icon cs-buybox__addto-icon--wishlist</argument>
                    <argument name="inlined" xsi:type="boolean">true</argument>
                    <argument name="lazy_loaded" xsi:type="boolean">false</argument>
                </arguments>
            </block>
        </referenceBlock>
    </body>
</page>
