<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="catalog.compare.link" template="Magento_Catalog::product/compare/link.phtml" display="false">
            <arguments>
                <argument name="xml_label" xsi:type="string" translate="true">Compare</argument>
                <argument name="additional_css_classes" xsi:type="string">cs-header-user-nav__item--compare</argument>
                <argument name="badge_additional_css_classes" xsi:type="string">cs-header-user-nav__qty-counter--compare</argument>
            </arguments>
            <block class="MageSuite\ThemeHelpers\Block\Icon" name="catalog.compare.link.icon">
                <arguments>
                    <argument name="icon_url" xsi:type="string">images/icons/header-user-nav/icon-compare.svg</argument>
                    <argument name="css_class" xsi:type="string">cs-header-user-nav__icon cs-header-user-nav__icon--compare</argument>
                    <argument name="inlined" xsi:type="boolean">true</argument>
                    <argument name="lazy_loaded" xsi:type="boolean">true</argument>
                </arguments>
            </block>
        </referenceBlock>

        <referenceBlock name="opengraph.general" remove="true" />
    </body>
</page>
