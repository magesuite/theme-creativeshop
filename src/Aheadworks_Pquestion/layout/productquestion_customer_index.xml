<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../../../../../../lib/internal/Magento/Framework/View/Layout/etc/page_configuration.xsd">
    <update handle="customer_account"/>
    <body>
        <referenceBlock name="content">
            <referenceBlock name="aw_pq.customer.subscribe">
                <block class="MageSuite\ThemeHelpers\Block\Icon" name="aw_pq.customer.subscribe.button.icon">
                    <arguments>
                        <argument name="icon_url" xsi:type="string">images/icons/button/icon-default-primary.svg</argument>
                        <argument name="css_class" xsi:type="string">cs-form__button-icon</argument>
                        <argument name="alt_text" xsi:type="string" translate="true">subscribe</argument>
                        <argument name="inlined" xsi:type="boolean">true</argument>
                        <argument name="lazy_loaded" xsi:type="boolean">true</argument>
                    </arguments>
                </block>
            </referenceBlock>
        </referenceBlock>
    </body>
</page>
