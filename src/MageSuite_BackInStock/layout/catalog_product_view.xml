<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <head>
        <css src="css/magesuite-back-in-stock.css" />
    </head>
    <body>
        <referenceBlock name="product.backinstock.subscription">
            <arguments>
                <argument name="additional_css_classes" xsi:type="string">cs-buybox__stock-subscription</argument>
            </arguments>
            
            <block class="MageSuite\ThemeHelpers\Block\Icon" name="product.backinstock.subscription.icon">
                <arguments>
                    <argument name="icon_url" xsi:type="string">images/icons/stock/back-in-stock.svg</argument>
                    <argument name="css_class" xsi:type="string">cs-product-stock-subscription__submit-icon</argument>
                    <argument name="inlined" xsi:type="boolean">true</argument>
                    <argument name="lazy_loaded" xsi:type="boolean">true</argument>
                    <argument name="alt_text" xsi:type="string" translate="true">back in stock</argument>
                </arguments>
            </block>
        </referenceBlock>
        <move element="product.backinstock.subscription" destination="product.info.type" after="-" />
    </body>
</page>
